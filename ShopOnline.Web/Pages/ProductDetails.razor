@using ShopOnline.Web.Components.BaseComponents
@page "/products/{Id:int}"
@inherits ProductDetailsBase

@if (CurrentProduct == null && string.IsNullOrWhiteSpace(ErrorMessage))
{
    <h3>Loading product..</h3>
}
else if (!string.IsNullOrWhiteSpace(ErrorMessage))
{
    <h3 class="text-danger">@ErrorMessage</h3>
}
else
{
    <h3 class="mb-5">Details</h3>
    <div class="row">
        <div class="col-md-6 mb-4">
            <img class="img-fluid" src="@CurrentProduct.ImageUrl" alt="Product image" />
        </div>
        <div class="col-md-6">
            <h3>@CurrentProduct.Name</h3>
            <p class="mb-4">@CurrentProduct.Description</p> 
            <p class="mb-4">
                <b>@CurrentProduct.Price.ToString("C")&nbsp;(@CurrentProduct.Qty units in stock)</b>
            </p>
        </div>
    </div>
}